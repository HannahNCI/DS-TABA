package GrpcClient;

import com.smartcityDS.LoginRequest;
import com.smartcityDS.User.APIResponse;
import com.smartcityDS.userGrpc;
import com.smartcityDS.userGrpc.userBlockingStub;

import io.grpc.ManagedChannel;
import io.grpc.ManagedChannelBuilder;


public class GrpcClient {
public static void main(String[] args) {
		
		ManagedChannel channel = ManagedChannelBuilder.forAddress("localhost",9090).usePlaintext().build();
		
		// stubs - generate from proto
		
		userBlockingStub userStub = userGrpc.newBlockingStub(channel);
		
		LoginRequest loginrequest = LoginRequest.newBuilder().setUsername("Hannah").setPassword("NCI2022").build();
		
		com.smartcityDS.APIResponse response = userStub.login(loginrequest);
		
		System.out.println(response.getResponsemessage());
 }
}
