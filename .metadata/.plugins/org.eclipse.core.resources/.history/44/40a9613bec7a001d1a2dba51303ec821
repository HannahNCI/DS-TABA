package GUI;

import io.grpc.ManagedChannel;
import io.grpc.ManagedChannelBuilder;
import io.grpc.stub.StreamObserver;
import sun.security.x509.IPAddressName;
import javax.jmdns.JmDNS;
import javax.jmdns.ServiceEvent;
import javax.jmdns.ServiceInfo;
import javax.jmdns.ServiceListener;
import javax.swing.*;

import com.smartcityDS.Ecar;
import com.smartcityDS.Timetable;
import com.smartcityDS.busNumber;
import com.smartcityDS.chargingDuration;
import com.smartcityDS.numberAvailable;
import com.smartcityDS.numberofchargingPoints;
import com.smartcityDS.usbPorts;

import java.awt.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.io.IOException;
import java.net.InetAddress;
import java.net.UnknownHostException;

public class GUI {
    public JFrame frame;
    public static ServiceInfo serviceinfo;
    public static void main (String[]args){
        EventQueue.invokeLater(new Runnable() {
            @Override
            public void run() {
                try {
                    GUI window = new GUI();
                    window.frame.setVisible(true);
                } catch (Exception e) {
                    e.printStackTrace();
                }
            }
        });
}
    public GUI() throws IOException, InterruptedException {
        String service_type = "_http._tcp.local.";
        discoveryService(service_type);
        String host = serviceinfo.getHostAddresses()[0];
        ManagedChannel channel = ManagedChannelBuilder.forAddress(host, 50053).usePlaintext().build();
        ManagedChannel channel2 = ManagedChannelBuilder.forAddress(host, 50052).usePlaintext().build();
        //smartcityDSstub = smartcityDSGrpc.newBlockingStub(channel);
        intializer();
    }

    public void intializer(){
        frame = new JFrame();
        frame.setTitle("Client - Service Controller");
        frame.setBounds(100, 100, 500, 500);
        frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        ui(frame);
    }

    public void discoveryService(String service_type) throws IOException, InterruptedException {
        JmDNS jmdns = JmDNS.create(InetAddress.getLocalHost());
        jmdns.addServiceListener(service_type, new MyServiceListener());
        Thread.sleep(10000);
        jmdns.close();
    }

    private static class MyServiceListener implements ServiceListener {
        public void serviceAdded(ServiceEvent event) {
            System.out.println("Service added: " + event.getInfo());
        }

        public void serviceRemoved(ServiceEvent event) {
            System.out.println("Service removed: " + event.getInfo());
        }

        public void serviceResolved(ServiceEvent event) {
            System.out.println("Service resolved: " + event.getInfo());
            serviceinfo = event.getInfo();
        }
    }

    
    public void ui(JFrame frame){
    	//options to select from
        JButton getBusScheduleBtn = new JButton("Bus Schedule");
        JButton getEScootersBtn = new JButton("eScooters");
        JButton getECarBtn = new JButton("eCar plugin Points");
        
        // text fields
        JTextField getBusScheduleTf = new JTextField();
        JTextField getEScootersTf = new JTextField();
        JTextField getECarTf = new JTextField();

        //adding to the GUI
        JPanel panel = new JPanel();
        panel.setLayout(new GridLayout(3, 2));
        panel.add(getBusScheduleTf);
        panel.add(getBusScheduleBtn);
        panel.add(getEScootersTf);
        panel.add(getEScootersBtn);
        panel.add(getECarTf);
        panel.add(getECarBtn);
        frame.add(panel);

        getBusScheduleBtn.addActionListener(new ActionListener() {
            @Override
            public void actionPerformed(ActionEvent e) {
                try{
                    int request = Integer.parseInt(getBusScheduleTf.getText());
                    busNumber requests = busNumber.newBuilder().setBusNumber(getBusScheduleTf.getText()).build();
                    Timetable reply =  smartcitydsstub.getTimetable(requests);
                   JOptionPane.showMessageDialog(frame, reply.getTimetable());

                }
                catch(Exception yes){
                    JOptionPane.showMessageDialog(frame, "Loading...");
                }
            }
        });

        getEScootersBtn.addActionListener(new ActionListener() {
            @Override
            public void actionPerformed(ActionEvent e) {
                try{
                    int request = Integer.parseInt(getEScootersTf.getText());
                    numberAvailable requests = numberAvailable.newBuilder().setNumberAvailable(getEScootersTf.getText()).build();
                    numberAvailable reply =  smartcitydsstub.setNumberAvailable(requests);
                  JOptionPane.showMessageDialog(frame, reply.getAvailability());

                }
                catch(Exception yes){
                    JOptionPane.showMessageDialog(frame, "Loading...");
                }
            }
        });

        getECarBtn.addActionListener(new ActionListener() {
            @Override
            public void actionPerformed(ActionEvent e) {
                try{
                    int request = Integer.parseInt(getECarTf.getText());
                    trainNumber requests = trainNumber.newBuilder().setTrainNumber(getTrainNumberTf.getText()).build();
                    trainTimetable reply =  traveldsstub.getTimetable(requests);
                   JOptionPane.showMessageDialog(frame, reply.getAvailablePoints());

                }
                catch(Exception yes){
                    JOptionPane.showMessageDialog(frame, "Loading...");
                }
            }
        });
        
    }

}