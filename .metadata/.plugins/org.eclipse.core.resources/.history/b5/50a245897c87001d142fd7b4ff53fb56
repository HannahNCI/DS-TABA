syntax = "proto3";
option java_multiple_files = true;
option java_package = "grpcSmartCity.escooter";
option java_outer_classname = "smartcityDSServiceImpl";
package grpcSmartCity;

service smartcityDS{
  //get available scooters
  rpc getTimetable(busNumber) returns (busTimetable);
  //get rental duration
  rpc getNumberofSeats(busNumber) returns (busNumberofSeats);
  //get rental cost
  rpc getNumberofUsb(busNumber) returns (busNumberofUsb);
  //seeing all scooters out of specific scooters type
  rpc seeBus(busSpecific) returns (busAmount);
  //delete scooters
  rpc deleteBus(busNumber) returns (busDelete);
}

message busNumber{
  string busNumber=1;
}
message busTimetable{
  string busTimetable=1;
}

message busNumberofSeats{
  string busNumberofSeats=1;
}


message busNumberofUsb{
  string busNumberofUsb=1;
}


message busSpecific{
  string busSpecific=1;
}
message busAmount{
  string busAmount=1;
}

message busDelete{
  string busDelete=1;
}
